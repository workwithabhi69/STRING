#include <iostream>
#include <string>
using namespace std;

int minFlips(string s) {
    int flips1 = 0, flips2 = 0;
    for (int i = 0; i < s.size(); i++) {
        if ((i % 2 == 0 && s[i] != '0') || (i % 2 == 1 && s[i] != '1'))
            flips1++;
        if ((i % 2 == 0 && s[i] != '1') || (i % 2 == 1 && s[i] != '0'))
            flips2++;
    }
    return min(flips1, flips2);
}

int main() {
    string s;
    cin >> s;
    cout << minFlips(s);
    return 0;
}
