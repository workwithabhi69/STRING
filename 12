#include <iostream>
#include <string>
using namespace std;

int main() {
    string str;
    cin >> str;
    int count0 = 0, count1 = 0, balanced = 0;

    for (char c : str) {
        if (c == '0') count0++;
        else if (c == '1') count1++;
        if (count0 == count1 && count0 != 0) {
            balanced++;
            count0 = 0;
            count1 = 0;
        }
    }

    if (count0 != 0 || count1 != 0)
        cout << -1;
    else
        cout << balanced;

    return 0;
}
